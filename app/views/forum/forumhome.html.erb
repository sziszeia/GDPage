<h1>Forum</h1>
<% @posts.each do |post|%>
    <div class="card m-5">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <p>User: <%= post.username %></p>
                </div>
                <div class="col-sm-6">
                    <%= post.created_at %></p>
                </div>
            </div>
            <div class="row">
                <p>Body: <%= post.body %></p><br />
            </div>
        </div>
    </div>
<% end %>